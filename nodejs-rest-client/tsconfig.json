{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true
  },
  "typeRoots": [
    "./src/core/types"
  ],
  "include": [
    "./src/**/*.ts",
    "*.json"
  ]
}
